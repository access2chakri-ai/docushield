# Multi-Cluster TiDB Configuration
# Operational Cluster (real-time search + insights)
TIDB_OPERATIONAL_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_OPERATIONAL_PORT=4000
TIDB_OPERATIONAL_USER=your_username
TIDB_OPERATIONAL_PASSWORD=your_password
TIDB_OPERATIONAL_DATABASE=docushield_ops

# Sandbox Cluster (branching for what-if analysis)
TIDB_SANDBOX_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_SANDBOX_PORT=4000
TIDB_SANDBOX_USER=your_username
TIDB_SANDBOX_PASSWORD=your_password
TIDB_SANDBOX_DATABASE=docushield_sandbox

# Analytics Cluster (patterns, trends, simulations)
TIDB_ANALYTICS_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_ANALYTICS_PORT=4000
TIDB_ANALYTICS_USER=your_username
TIDB_ANALYTICS_PASSWORD=your_password
TIDB_ANALYTICS_DATABASE=docushield_analytics

# LLM Factory - Multi-provider API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here
GROQ_API_KEY=your_groq_key_here

# LLM Factory Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_EMBEDDING_PROVIDER=openai
LLM_FALLBACK_ENABLED=true
LLM_LOAD_BALANCING=false

# Google Drive Integration
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_TOKEN_PATH=token.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id

# External Integrations
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_WEBHOOK_URL=your_slack_webhook_url
SENDGRID_API_KEY=your_sendgrid_key
ALERT_EMAIL_FROM=alerts@docushield.com
ALERT_EMAIL_TO=admin@yourcompany.com

# Background Processing
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# Risk Analysis Settings
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5

# Document Processing
MAX_FILE_SIZE_MB=50
MAX_RETRY_ATTEMPTS=3
RETRY_COOLDOWN_MINUTES=5

# Processing Safety Limits (Prevent Infinite Loops)
MAX_PROCESSING_TIME_MINUTES=15
MAX_TEXT_CHUNKS=500
MAX_LLM_CALLS_PER_DOCUMENT=100
MAX_FILE_READ_ITERATIONS=1000

# Monitoring & Performance
ENABLE_REAL_TIME_MONITORING=true
MONITORING_INTERVAL_MINUTES=5

# App Settings
DEBUG=true
ENVIRONMENT=development